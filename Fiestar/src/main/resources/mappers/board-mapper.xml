<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.TeamFiestar.Fiestar.board.model.mapper.BoardMapper">
  
  <resultMap id="board_rm" type="Board">

		<id property="boardNo" column="BOARD_NO" />

		<collection property="imageList" 
               select="selectImageList" 
               column="BOARD_NO"
               javaType="java.util.ArrayList"
               ofType="BoardImg" />	
               
               
       <collection property="commentList"
			select="selectCommentList"
			column="BOARD_NO"
			javaType="java.util.ArrayList"
			ofType="Comment"
			/>
           
	</resultMap>
  
	
	<!-- ===========================일반 게시글 조회==================================-->
 
	 
  
  	<!--게시글 조회-->
 	<select id="selectBoard" resultType="Board">
		SELECT BOARD_NO, MEMBER_NICKNAME, BOARD_ENROLL_DATE, BOARD_CONTENT,MEMBER_PROFILE, MEMBER_NO,
		
		(SELECT COUNT(*) FROM "BOARD_LIKE" L 
			WHERE L.BOARD_NO = B.BOARD_NO) LIKE_COUNT
		
		FROM BOARD B
		JOIN "MEMBER" USING("MEMBER_NO")
	<!--	JOIN "ARTIST" USING-->
		
		<!--WHERE ARTIST_GROUP_NO = #{artistGroupNo}-->
		
		WHERE BOARD_DEL_FL = 'N'
		ORDER BY BOARD_NO DESC
	</select>
	
